{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3AllowPut",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::pbeje-uc6-bucket-for-metrics-storage/*"
            ]
        },
        {
            "Sid": "EC2AllowDescribeVolSnap",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeVolumes",
                "ec2:DescribeSnapshots"
            ],
            "Resource": "*"
        }
    ]
}